<Window x:Class="Filling_Station_Automated_Workplace.Data.TanksConfigurator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="TanksConfigurator" Height="600" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True"
                  CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"
                  CanUserSortColumns="False">
            
        </DataGrid>
        <DockPanel LastChildFill="True" Margin="100,570,100,10">
            <Button x:Name="btnAcceptChanges" Content="Accept Changes" />
            <Button x:Name="btnCancelChanges" Content="Cancel Changes" Margin="100,0,0,0"/>
        </DockPanel>
    </Grid>
</Window>